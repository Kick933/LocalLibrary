extends layout 


block content 
    h1 Delete #{genre.name}

    if genre_books.length
        p #[strong Delete the following books before attempting to delete this Genre.]

        div(style='margin:20px 0 0 20px;')
            h4 Books 

            dl 
            each book in genre_books 
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}

    else 
        p #[strong Do you really want to delete this Genre?]

        form(method='POST' action='')
            div.form-group
                input#genreid.form-control(type='hidden' value=genre._id name='genreid' required='true')

            button.btn.btn-danger(type='submit') Delete